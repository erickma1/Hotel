

<style>
  .table-hover tbody tr:hover td {
    background: #e3f2fd;
  }
</style>





<div class="container">
  <div class="page-header">
  <br/><br/><br/>
    
    <h4><span class="label label-primary">Customer Information</span></h4>
  </div>
</div>
<br/>



<div class="container">
<input class="form-control" id="myFilter" type="text" placeholder="Search here"> <br>
  
  <table class="table table-striped table-hover">
    <thead class="table-primary">
      <tr>
        <th>Name</th>
        <th>Pone Number</th>
        
        <th>Actions</th>
        <th>Actions</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody  id="productTable", class="table-group-divider">
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.firstName + " " + customer.lastName %></td>
          <td><%= customer.mobileNumber %></td>
          <td><%= link_to "Book a Room", new_booking_path(:_id => customer.id) %></td>

            <td >
            <%= link_to "Show", customer_path(customer), class: 'label label-info'%>
            <%= link_to "Edit", edit_customer_path(customer), class: 'label label-success'%>
            
            <%= link_to "Delete", @customer, method: :destroy, data: { confirm: "Are you sure?" }, class: 'label label-danger' %>
          </td>
          <td> --- </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <script>
$(document).ready(function(){
  $("#myFilter").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#productTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
</div>