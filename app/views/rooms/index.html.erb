<style>
  .table-hover tbody tr:hover td {
    background: #e3f2fd;
  }
</style>

<div class="container">
  <div class="page-header">
  <br/><br/><br/>
    <h1>Blog</h1>
    <h4><span class="label label-primary">This is my first blog application with Bootstrap and Rails :D </span></h4>
  </div>
</div>
<br/>
<div class="container">
  <table class="table table-striped table-hover">
    <thead class="table-primary">
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Actions</th>
        <th>Actions</th>
        <th>Actions</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.name %></td>
          <td><%= room.id %></td>
          <td><%= room.id %></td>
          <td><%= link_to "Book a Room", new_booking_path(:_id => room.id) %></td>

            <td class="text-center">
            <%= link_to "Show", room_path(room), class: 'label label-info'%>
            <%= link_to "Edit", edit_room_path(room), class: 'label label-success'%>
            
            <%= link_to "Delete", @room, method: :destroy, data: { confirm: "Are you sure?" }, class: 'label label-danger' %>
          </td>
          <td> --- </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>